.modal-header
    button.close(ng-click='closeMe()') &times
    label Моля въведете:

.modal-body
    .well.ask
        .inner.center-block
            form.form-horizontal(role="form")
                .form-group
                    label.control-label(ng-show='titles') Тема:
                    .necessary.pull-right необходима е
                    input.form-control.input-lg(ng-enter="ent()",ng-blur="alert[0]=''", id='name', autofocus="autofocus", type="text", ng-model="product.name")
                    p.alerting {{alert[0]}}
                .form-group
                    label.control-label(ng-show='titles') Мнение:
                    textarea.form-control(cols=40 ,rows=4, ng-model="proscon")
                .form-group
                    label.control-label(ng-show='titles') Препоръки:
                    textarea.form-control(cols=40 ,rows=4, ng-model="conscon")
                .row
                    .text-center
                        label Добавете снимка пожелание
                    .col-xs-6
                        .text-center
                            .fileUpload.btn.btn-success.big(ng-hide = 'imageExist') Вземи
                                    input.gg.upload(type="file" ng-file-select="addImage($files)" accept="image/*")
                            button#but.btn.btn-default(ng-enter='ent()', ng-show = 'imageExist' ,ng-click="removeImage()") Махни
                    .col-xs-6
                        .thumbnail.preview
                            img(ng-show='imageExist', ng-src='{{img}}')
                            p.noPicture.text-center(ng-show='!imageExist') {{imageMessage}}


                p.alerting {{alert[1]}}

.modal-footer
    button.btn.btn-primary.center-block(ng-click='upload()') Готово